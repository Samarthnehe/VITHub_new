<html>
    <head>
        <title>VITHub</title>
        <link rel="stylesheet" type=" text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
        <link rel="stylesheet" type=" text/css" href="/stylesheets/app.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel='manifest' href='/manifest.json'>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <script>
          window.onload = function() {
            document.getElementById("demo").onclick=function() {myFunction()};
          
            function myFunction() {
              document.getElementsByClassName("col heya")[0].classList.toggle("mystyle");
              }

              var label = document.getElementsByClassName("reps");
            for (var i=0;i<label.length;i++){
              label[i].onclick=functionRep(i);
            }
            
            function functionRep(i) {
              return function(){ 
                console.log(document.getElementsByClassName("rep"));
                document.getElementsByClassName("rep")[i].classList.toggle("myreply");
                
              }
             
              }
            
          };
          
          
        </script>
      
    </head>
    <body style="background-color: #24244e;">
        <div class="ui fixed inverted menu">
        <div class="ui container" >
                <div class="header item" ></i><a id="demo"><i class="bars large icon"></i></a></div>
                
               
                <a href="/" class="item"><i class="Home small icon"></i>Home</a>
                <a href="/answer" class="item"><i class="pencil alternate small icon"></i>Answer</a>
                <a href="/blogs/new" class="item right but"><button class="ui basic blue button">Add Question</button></a>
                <% if(!currUser){ %>
                    <div class="item right heya" style="padding-left: 15px;"><i class="sign-in alternate large icon"></i><a href="/log" style="font-weight: bold;">LOGIN</a></div>
                  
                  <%} else{%>
                  <div class="item right heya"><div class="dropdown1">
                    <button class="dropbtn1"><i class="user small icon"></i><span class="profile">Profile</span>
                      <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="dropdown-content1">
                      <div class="info">
                        <a href="#"><i class="user circle small icon"></i><%= currUser.username %></a>
                           
                      </div>
                      <a class="hi" href="/content">Your Content</a>
                      <a class="hi" href="/logout">Logout</a>
                    </div>
                  </div>
                </div>
                <% } %>
                
            </div>
            
        </div>
        <div class="container" style="margin-top: 60px;" >
          <% if(error && error.length>0){ %>
            <div class="alert alert-danger" role="alert" style="text-align: center;">
              <%=error%>
            </div>
          <% } %>
          <% if(success && success.length >0){%>
          <div class="alert alert-success" role="alert" style="text-align: center;">
            <%=success%>
          </div>
          <% }%>
        </div>
        
    

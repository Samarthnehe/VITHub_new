<html>
    <head>
        <title>VITHub</title>
        <link rel="stylesheet" type=" text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
        <link rel="stylesheet" type=" text/css" href="/stylesheets/app.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel='manifest' href='/manifest.json'>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function(){
             $("#pass").keyup(function(){
              check_pass();
             });
            });
            
            function check_pass()
            {
             var val=document.getElementById("pass").value;
             var meter=document.getElementById("meter");
             var no=0;
             if(val!="")
             {
              if(val.length<=4)no=1;
              if(val.length>4 && (val.match(/[a-z]/) || val.match(/\d+/) || val.match(/.[!,@,#,$,%,^,&,*,?,_,~,-,(,)]/)))no=2;
            
                if(val.length>4 && ((val.match(/[a-z]/) && val.match(/\d+/)) || (val.match(/\d+/) && val.match(/.[!,@,#,$,%,^,&,*,?,_,~,-,(,)]/)) || (val.match(/[a-z]/) && val.match(/.[!,@,#,$,%,^,&,*,?,_,~,-,(,)]/))))no=3;
            
               if(val.length>4 && val.match(/[a-z]/) && val.match(/\d+/) && val.match(/.[!,@,#,$,%,^,&,*,?,_,~,-,(,)]/))no=4;
              
              
              {
               $("#meter").animate({width:'50px'},300);
               meter.style.backgroundColor="red";
               document.getElementById("pass_type").innerHTML="Very Weak";
              }
            
              if(no==2)
              {
               $("#meter").animate({width:'75px'},300);
               meter.style.backgroundColor="#FFB6C1";
               document.getElementById("pass_type").innerHTML="Weak";
              }
            
              if(no==3)
              {
               $("#meter").animate({width:'110px'},300);
               meter.style.backgroundColor="#FF8000";
               document.getElementById("pass_type").innerHTML="Good";
              }
            
              if(no==4)
              {
               $("#meter").animate({width:'149px'},300);
               meter.style.backgroundColor="#00FF40";
               document.getElementById("pass_type").innerHTML="Strong";
              }
             }
            
             else
             {
              $("#meter").animate({width:'0px'},300);
              meter.style.backgroundColor="white";
              document.getElementById("pass_type").innerHTML="";
             }
            }
            </script>
        
    </head>
    <body style="overflow: hidden;background-color: #24244e;">
        <div class="ui fixed inverted menu">
        <div class="ui container" >
                <div class="header item" style="margin-right: 3px;"><i class="icon question"></i><a class="logo" href="/">VITHub</a></div>
               <div class="item ">Get your questions answered!</div>
               <div class="item right ">For all VITians</div>
                
            </div>
            
        </div>
        <div class="container">
            <% if(error && error.length>0){ %>
              <div class="alert alert-danger" role="alert" style="margin-top: 70px;text-align: center;">
                <%=error%>
              </div>
            <% } %>
            <% if(success && success.length >0){%>
            <div class="alert alert-success" role="alert" style="margin-top: 70px;text-align: center;">
              <%=success%>
            </div>
            <% }%>
          </div>
    
